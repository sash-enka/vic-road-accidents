{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "config": {
      "background": "aliceblue",
      "axis": {
        "grid": true,
        "gridColor": "#dedede"
      }
    },
    "title": {"text": "Victorian Road Accidents"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/sash-enka/vic-road-accidents/main/layers/VicRoads_Regions.topojson",
      "format": {"type": "topojson", "feature": "VicRoads_Regions"}
        },
        "mark": {
          "type": "geoshape", "fill": "whitesmoke", "stroke": "lightgray"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/sash-enka/vic-road-accidents/main/data/NODE_ACCIDENTEVENT_CONDENSED.csv"
        },
        "mark": {"type": "circle", "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Long", "type": "quantitative"},
          "latitude": {"field": "Lat", "type": "quantitative"},
          "size": {
            "field": "NO_PERSONS",
            "type": "quantitative",
            "title": "Number of people involved",
            "scale": {"domain": [1, 15]}
          },
          "color": {
            "field": "SPEED_ZONE",
            "type": "quantitative",
            "title": "Speed Limit (km/h)",
            "scale": {"scheme": "yelloworangered", "domainMax": 100}
          },
          "opacity": {
            "field": "SEVERITY",
            "type": "nominal",
            "title": "Severity (0-3)"
          }
        }
      }
    ]
  }